<div class="d-flex justify-content-end mb-3">
  <%= link_to "New recipe", new_recipe_path, class: "btn btn-primary" %>
</div>

<div id="recipes" class="row row-cols-1 row-cols-md-3 g-4">
  <% @recipes.each do |recipe| %>
    <div class="col">
      <%= render recipe %>
    </div>
  <% end %>
</div>
