<%= form_with(model: menu) do |form| %>
  <% if menu.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
        <% menu.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :starts_at, "Week of", style: "display: block;" %>
    <%= form.date_field :starts_at %>
    <%= form.hidden_field :ends_at %>
  </div>

  <div>
    <div class="d-flex">
      <p>Recipes</p>
      <% if menu.new_record? %>
        <%= link_to "Shuffle", new_menu_path %>
      <% end %>
    </div>

    <div id="recipes" class="d-flex">
      <%= form.fields_for :dinner_menus do |dmf| %>
        <%= dmf.fields_for :recipe do |recipe_fields| %>
          <%= render recipe_fields.object %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
