<%= turbo_frame_tag @menu do %>
  <div class="mb-3">
    <%= render @menu %>
  </div>

  <div class="d-flex justify-content-between align-items-baseline">
    <div class="d-flex">
      <%= link_to edit_menu_path(@menu), class: "btn btn-success me-3" do %>
        <i class="fa fa-pencil"></i>
        Edit
      <% end %>
      <%= button_to @menu, method: :delete, class: "btn btn-outline-danger" do %>
        <i class="fa fa-trash"></i>
        Delete
      <% end %>
    </div>
    <%= link_to menus_path, class: "text-danger" do %>
      <i class="fa fa-times"></i>
      Cancel
    <% end %>
  </div>
<% end %>
