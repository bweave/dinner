<div class="row justify-content-center mb-3">
  <div class="col-8">
    <div id="<%= dom_id @household %>">
      <h1><%= @household.name %></h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          <% @household.users.each_with_index do |user, i| %>
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="d-flex">
      <%= link_to edit_household_path(@household), class: "btn btn-success me-3" do %>
        <i class="fa fa-pencil"></i>
        Edit
      <% end %>
    </div>
  </div>
</div>
